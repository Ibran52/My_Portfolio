<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Portfolio</title>
    <link rel="stylesheet" href="/stylesheet/home.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
    <%- include('../partials/navbaar', { data: data }) %>

        <div id="app">
            <canvas id="canvas"></canvas>

            <!-- Home Section -->
            <section id="home">
                <div class="intro-content">
                    <h1>Hi, It's <span>
                            <%= data.profile.name %>
                        </span></h1>
                    <h3>I'm a <span class="role-text"></span></h3>
                    <p>
                        <%= data.profile.bio %>
                    </p>
                    <div class="social-links">
                        <a href="<%= data.profile.social.linkedin %>" target="_blank"><i
                                class="ri-linkedin-fill"></i></a>
                        <a href="<%= data.profile.social.github %>" target="_blank"><i class="ri-github-fill"></i></a>
                        <a href="<%= data.profile.social.instagram %>" target="_blank"><i
                                class="ri-instagram-line"></i></a>
                    </div>
                </div>

                <div class="profile-container">
                    <img src="/images/profile.png" alt="Ibran Siddique" class="profile-image">
                </div>
            </section>

            <!-- About Section -->
            <h2 class="section-title">About <span>Me</span></h2>
            <section id="about">
                <div class="about-container">
                    <div class="carousel">
                        <div class="carousel-track">
                            <% data.about.cards.forEach((card)=> { %>
                                <article class="deconstructed-card text-card">
                                    <div class="card-layer card-background">
                                        <div class="bg-grid">
                                            <div class="grid-line horizontal" style="top: 25%"></div>
                                            <div class="grid-line horizontal" style="top: 50%"></div>
                                            <div class="grid-line horizontal" style="top: 75%"></div>
                                            <div class="grid-line vertical" style="left: 33.33%"></div>
                                            <div class="grid-line vertical" style="left: 66.66%"></div>
                                        </div>
                                        <div class="bg-objects">
                                            <div class="bg-object circle"></div>
                                            <div class="bg-object square"></div>
                                            <div class="bg-object triangle"></div>
                                        </div>
                                    </div>
                                    <div class="card-layer card-frame">
                                        <svg viewBox="0 0 300 400" preserveAspectRatio="none">
                                            <rect class="frame-path" x="20" y="20" width="260" height="360" rx="24"
                                                ry="24" />
                                        </svg>
                                    </div>
                                    <div class="card-layer card-content egg-content">
                                        <div class="content-fragment fragment-meta">
                                            <div class="meta-line"></div>
                                            <span class="meta-text">
                                                <%= card.type.toUpperCase() %>
                                            </span>
                                        </div>
                                        <div class="content-fragment fragment-heading">
                                            <h2 class="content-text">
                                                <%= card.title %>
                                            </h2>
                                            <h3 class="content-subtext">
                                                <%= card.subtitle %>
                                            </h3>
                                        </div>
                                        <div class="content-fragment fragment-body">
                                            <p class="content-text">
                                                <%= card.text %>
                                            </p>
                                        </div>
                                        <div class="content-fragment fragment-cta">
                                            <a href="<%= card.cta.link %>" class="cta-link"
                                                <%=card.cta.link.startsWith('http') ? 'target="_blank"' : '' %>>
                                                <div class="cta-box"></div>
                                                <span class="cta-text">
                                                    <%= card.cta.text %>
                                                </span>
                                            </a>
                                        </div>
                                    </div>
                                </article>
                                <% }); %>
                        </div>

                        <div class="carousel-controls">
                            <button class="carousel-button prev">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="15 18 9 12 15 6"></polyline>
                                </svg>
                            </button>
                            <button class="carousel-button next">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="9 18 15 12 9 6"></polyline>
                                </svg>
                            </button>
                        </div>

                        </button>
                    </div>

                    <div class="dots-container"></div>
                </div>
        </div>
        </div>
        </div>

        <div class="attribution">
            <a href="https://calculatequick.com" target="_blank">calculatequick.com</a>
        </div>
        </section>

        <!-- Skills Section -->
        <section id="skills">
            <div class="skills-container">
                <h2 class="section-title">My <span>Skills</span></h2>

                <div class="skills-grid">
                    <% Object.keys(data.skills).forEach(category=> { %>
                        <div class="skill-category">
                            <h3>
                                <%= category %>
                            </h3>
                            <div class="skill-cards">
                                <% data.skills[category].forEach(skill=> { %>
                                    <div class="skill-card">
                                        <i class="<%= skill.icon %>"></i>
                                        <span>
                                            <%= skill.name %>
                                        </span>
                                    </div>
                                    <% }); %>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </section>




        <!-- Projects Section -->
        <section id="projects">
            <div class="projects-container">
                <h2 class="section-title">My <span>Projects</span></h2>

                <div class="projects-grid">
                    <% data.projects.forEach(project=> { %>
                        <div class="project-card">
                            <div class="project-image">
                                <!-- Using a placeholder image or a div if image missing -->
                                <div class="placeholder-img" style="background: <%= project.gradient %>;">
                                </div>
                            </div>
                            <div class="project-content">
                                <h3>
                                    <%= project.title %>
                                </h3>
                                <p>
                                    <%= project.description %>
                                </p>
                                <div class="tech-stack">
                                    <% project.stack.forEach(tech=> { %>
                                        <span>
                                            <%= tech %>
                                        </span>
                                        <% }); %>
                                </div>
                                <div class="project-links">
                                    <% project.links.forEach(link=> { %>
                                        <a href="<%= link.url %>" target="_blank"><i class="<%= link.icon %>"></i>
                                            <%= link.name %>
                                        </a>
                                        <% }); %>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
            </div>
        </section>

        <!-- Achievements Section -->
        <section id="achievements">
            <div class="achievements-container">
                <h2 class="section-title">My <span>Achievements</span></h2>

                <div class="achievements-content">
                    <!-- Passion/Career Text -->
                    <div class="achievement-text-card">
                        <h3>Passion & Career</h3>
                        <p>
                            <%= data.achievements.passion %>
                        </p>
                    </div>

                    <!-- Certificates Grid -->
                    <h3 class="subsection-title">Certifications & Participations</h3>
                    <div class="certificates-grid">
                        <% data.achievements.certificates.forEach(cert=> { %>
                            <div class="certificate-item">
                                <div class="cert-frame">
                                    <img src="<%= cert.image %>" alt="<%= cert.title %>">
                                </div>
                                <p class="cert-caption">
                                    <%= cert.title %>
                                </p>
                            </div>
                            <% }); %>
                    </div>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section id="contact">
            <div class="contact-container">
                <h2 class="section-title">Contact <span>Me</span></h2>
                <div class="contact-wrapper">
                    <!-- Contact Info -->
                    <div class="contact-info">
                        <h3>Let's Connect</h3>
                        <p>I'm currently available for freelance work or internship opportunities. If you have a project
                            that needs some creative touch, or just want to say hi, feel free to send me a message!</p>

                        <div class="info-item">
                            <div class="icon-box">
                                <i class="ri-mail-send-line"></i>
                            </div>
                            <div class="info-content">
                                <h4>Email</h4>
                                <span><a href="mailto:<%= data.profile.email %>" style="color: #fff;">
                                        <%= data.profile.email %>
                                    </a></span>
                            </div>
                        </div>

                        <div class="info-item">
                            <div class="icon-box">
                                <i class="ri-map-pin-line"></i>
                            </div>
                            <div class="info-content">
                                <h4><a href="https://www.google.com/maps/place/Mumbai,+Maharashtra,+India "
                                        target="_blank" style="color: #fff;">Location</a></h4>
                                <span>
                                    <%= data.profile.location %>
                                </span>
                            </div>
                        </div>

                        <div class="social-connect">
                            <h4>Follow Me</h4>
                            <div class="social-icons">
                                <a href="<%= data.profile.social.linkedin %>" target="_blank"><i
                                        class="ri-linkedin-fill"></i></a>
                                <a href="<%= data.profile.social.github %>" target="_blank"><i
                                        class="ri-github-fill"></i></a>
                                <a href="<%= data.profile.social.instagram %>" target="_blank"><i
                                        class="ri-instagram-line"></i></a>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="contact-form">
                        <form action="#">
                            <div class="input-group">
                                <input type="text" required>
                                <label>Your Name</label>
                            </div>
                            <div class="input-group">
                                <input type="email" required>
                                <label>Your Email</label>
                            </div>
                            <div class="input-group">
                                <textarea required></textarea>
                                <label>Your Message</label>
                            </div>
                            <button type="submit" class="submit-btn">Send Message <i
                                    class="ri-send-plane-fill"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <footer>
            <div class="footer-container">
                <div class="footer-content">
                    <p>&copy; 2025 <%= data.profile.name %>. All Rights Reserved.</p>
                    <div class="footer-links">
                        <a href="#home">Home</a>
                        <a href="#about">About</a>
                        <a href="#skills">Skills</a>
                        <a href="#projects">Projects</a>
                        <a href="#contact">Contact</a>
                    </div>
                </div>
            </div>
        </footer>

        <!-- WhatsApp Floating Button -->
        <a href="<%= data.profile.social.whatsapp %>" class="whatsapp-float" target="_blank">
            <i class="ri-whatsapp-fill"></i>
        </a>

        <!-- dont touch below code -->
        <div class="hero">
            <!-- <h1>Tubes</h1>
            <h2>Cursor</h2> -->
            <a target="_blank" href="https://www.framer.com/@kevin-levron/"></a>
        </div>
        </div>

        <script type="module" src="/javascript/home.js"></script>
</body>

</html>